    <style>
        body{
            padding-top: 70px;
        }
    </style>
</head>
<body>

    @using (Html.BeginForm(new { id = "formPrin" }))
    {
        <main id="principal">

            <div id="espacio" class="container">

                <form>
                    <br />
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @if (@ViewBag.Message != null)
                    {
                        <div style="border: 1px solid red">
                            @ViewBag.Message
                        </div>

                    }
                <div>
                    <center>
                        <i class="bi bi-person-fill" style="font-size: 100px;"></i>
                        <h4>Iniciar Sesión</h4>
                    </center>
                    <br />
                    <div class="mb-3">
                        @Html.LabelFor(a => a.Login, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(a => a.Login, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Login, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3" style="padding-bottom:9px;">
                        @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <center>
                        <input type="submit" class="btn btn-success" value="Ingresar" />
                    </center>
                </div>

