@model IEnumerable<WebAppDermatologia.Models.Empleado>

@{
    ViewBag.Title = "Index";
}

<style>
    #busqueda {
        display: flex;
        flex-direction: row;
        margin-top: 30px;
        margin-bottom: 30px;
        border-style: solid;
        border-width: 1px;
        border-radius: 10px;
        height: 5em;
        align-items: center;
        padding-left: 20px;
        border-color: rgb(235,235,235);
        background: rgb(235,235,235);
        background: linear-gradient(157deg, rgba(235,235,235,1) 0%, rgba(240,240,240,1) 37%, rgba(224,224,224,1) 100%);
    }

        #busqueda > label {
            margin-top: 5px;
        }

        #busqueda > label, #SearchString {
            margin-right: 10px;
        }

    #barraBusqueda {
        display: flex;
        flex-direction: row;
    }
</style>

<h2>Empleados</h2>

<p>
    @Html.ActionLink("Crear Nuevo Empleado", "Create", null, new { @class = "btn btn-primary" })
</p>
@using (Html.BeginForm())
{
    <div id="busqueda">
        <label>Encontrar por cédula: </label>
        <div id="barraBusqueda">
            @Html.TextBox("SearchString", null, new { @class = "form-control" })
            <input type="submit" value="Buscar" class="btn btn-success" style="height: 35px;" />
        </div>
    </div>
}
<table class="table">
    <tr>
     
        <th>
            @Html.DisplayNameFor(model => model.Rol_Servicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Rol_Servicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Login }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Login }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Login }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
